{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES6", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "build",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
